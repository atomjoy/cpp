{
    /*
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    // Variables:
    // ${fileDirname}
    // ${fileBasenameNoExtension}
    // ${workspaceFolderBasename}
    
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "BUILD G++",
            "command": "g++",
            "args": [
                "-g",
                "-Wall",
                "-pedantic",
                "${file}",
                "-o",
                "${fileBasenameNoExtension}"
            ],
            "problemMatcher": [],
            "group": "build"
        },
        {
            "type": "shell",
            "label": "RUN G++",
            "command": "./${fileBasenameNoExtension}",
            "dependsOn": [
                "BUILD G++"
            ],
            "problemMatcher": []
        }
    ]
}
